{
  "name": "hivemindrdp",
  "author": "kerembay9",
  "version": "1.0.0",
  "description": "Hivemind RDP project for remote controlling desktop from mobile-desktop",
  "main": "main.js",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "@electron/notarize": "^2.3.0",
    "electron": "^28.2.1",
    "electron-builder": "^24.13.3"
  },
  "scripts": {
    "start": "electron .",
    "distwin": "electron-builder --win -p always",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.1.8",
    "robotjs": "^0.6.0",
    "socket.io-client": "^4.7.4"
  },
  "repository": "https://github.com/kerembay9/HiveMindRDPElectron",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.hivemind.webrdp",
    "productName": "HiveMind RDP",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    }
  }
}
